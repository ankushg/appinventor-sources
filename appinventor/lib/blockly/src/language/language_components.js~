/* App Inventor components - playing around */

Blockly.Language.components_Canvas1_Touched = {
  // A Canvas component
  category: 'Canvas1',
  helpUrl: 'http://www.google.com',
  init: function() {
    this.setColour('green');
    this.addTitle('when');
    this.addTitle('Canvas1.Touched');
    this.addInput('x', '', Blockly.LOCAL_VARIABLE).setText('x');
    this.addInput('y', '', Blockly.LOCAL_VARIABLE).setText('y');
    this.addInput('touchedSprite', '', Blockly.LOCAL_VARIABLE).setText('touchedSprite');
    this.addInput('do', '', Blockly.NEXT_STATEMENT);
    this.setPreviousStatement(false);
    this.setNextStatement(false);
  }
};

Blockly.Language.components_Canvas1_DrawCircle = {
  // Add to a variable in place.
  category: 'Canvas1',
  helpUrl: 'http://www.google.com',
  init: function() {
    this.setColour('purple');
    this.addTitle('call');
    this.addTitle('Canvas1.DrawCircle');
    this.addInput('x', '', Blockly.INPUT_VALUE);
    this.addInput('y', '', Blockly.INPUT_VALUE);
    this.addInput('r', '', Blockly.INPUT_VALUE);
    this.setPreviousStatement(true);
    this.setNextStatement(true);
  }
};

Blockly.Language.components_Canvas1_getproperty = {
  // Variable getter.
  category: Canvas1,  // Variables are handled specially.
  helpUrl: 'http://www.google.com',
  init: function() {
    this.setColour('baby');
    this.addTitle('Canvas1.');
    var dropdown = function() {
      return [
              'backgoundColor',
              'width',
              'height',
              'backgroundImage',
              'fontSize',
              'lineWidth'
            ];
        };
    this.addTitle(new Blockly.FieldDropdown('backgroundColor',
      dropdown, function () { return; }));
    this.setOutput(true);
  },
  getVars: function() {
    return [this.getTitleText(1)];
  },
  renameVar: function(oldName, newName) {
    if (Blockly.Variables.nameEquals(oldName, this.getTitleText(1))) {
      this.setTitleText(newName, 1);
    }
  }
};

Blockly.Language.components_Canvas1_setproperty = {
  // Variable setter.
  category: Canvas1,  // Variables are handled specially.
  helpUrl: 'http://www.google.com',
  init: function() {
    this.setColour('baby');
    this.addTitle('set');
    this.addTitle('Canvas1.');
    var dropdown = function() {
      return [
              'backgoundColor',
              'width',
              'height',
              'backgroundImage',
              'fontSize',
              'lineWidth'
            ];
        };
    this.addTitle(new Blockly.FieldDropdown('backgroundColor',
      dropdown, function() { return; }));
    this.addTitle('to');
    this.addInput('', '', Blockly.INPUT_VALUE);
    this.setPreviousStatement(true);
    this.setNextStatement(true);
  },
  getVars: function() {
    return [this.getTitleText(1)];
  },
  renameVar: function(oldName, newName) {
    if (Blockly.Variables.nameEquals(oldName, this.getTitleText(1))) {
      this.setTitleText(newName, 1);
    }
  }
};



